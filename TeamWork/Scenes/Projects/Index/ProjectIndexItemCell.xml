<ProjectIndexItemCell
    height="auto + GRID"
    selectionStyle="none">

    <macro name="GRID" value="16"/>

    <UIView
        height="auto"
        layer.masksToBounds="false"
        layer.shadowColor="black"
        layer.shadowOffset.height="8"
        layer.shadowOffset.width="0"
        layer.shadowOpacity="0.3"
        layer.shadowRadius="5"
        left="GRID"
        outlet="containerView"
        right="parent.right - GRID"
        top="GRID">

        <UIView
            backgroundColor="white"
            height="auto"
            layer.cornerRadius="18"
            layer.masksToBounds="true"
            outlet="cardView"
            width="100%">

            <TWKImageView
                clipsToBounds="true"
                contentMode="scaleAspectFill"
                height="300"
                id="image"
                imageUrl="{image}"
                outlet="logoImageView"
                top="0"
                width="100%"
            />
            <UIView
                height="auto + GRID / 2"
                top="parent.top"
                width="100%">

                <UILabel
                    font="{theme.font.title1.bold} 36"
                    height="auto"
                    left="GRID"
                    numberOfLines="0"
                    right="parent.right - GRID"
                    text="{name}"
                    textColor="{titleColor}"
                    top="GRID / 2"
                />
            </UIView>
            <UIView
                backgroundColor="rgba(0, 0, 0, 0.5)"
                bottom="#image.bottom"
                height="auto + GRID / 2"
                width="100%">

                <UILabel
                    font="{theme.font.headline}"
                    left="GRID / 2"
                    numberOfLines="2"
                    right="parent.right - GRID"
                    text="{company.name}"
                    textColor="white"
                    top="previous.bottom + GRID / 2"
                />
                <UILabel
                    font="{theme.font.footnote}"
                    left="GRID / 2"
                    numberOfLines="2"
                    right="parent.right - GRID / 2"
                    text="{description}"
                    textColor="white"
                    top="previous.bottom + GRID / 4"
                />
            </UIView>
        </UIView>
    </UIView>
</ProjectIndexItemCell>
