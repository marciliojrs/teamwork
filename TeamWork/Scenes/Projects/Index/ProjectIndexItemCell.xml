<ProjectIndexItemCell
    height="auto"
    selectionStyle="none">

    <macro name="GRID" value="16"/>

    <UIView
        height="auto"
        layer.masksToBounds="false"
        layer.shadowColor="black"
        layer.shadowOffset.height="8"
        layer.shadowOffset.width="0"
        layer.shadowOpacity="0.3"
        layer.shadowRadius="5"
        left="GRID"
        right="parent.right - GRID"
        top="GRID"
        outlet="containerView">

        <UIView
            backgroundColor="white"
            height="auto"
            layer.cornerRadius="18"
            layer.masksToBounds="true"
            width="100%">

            <UIImageView
            id="image"
                clipsToBounds="true"
                contentMode="scaleAspectFill"
                height="300"
                imageUrl="{image}"
                top="0"
                width="100%"
            />
            <UIView
                backgroundColor="rgba(0, 0, 0, 0.5)"
                height="auto + GRID / 2"
                top="parent.top"
                width="100%">

                <UILabel
                    font="{theme.font.title3.bold}"
                    height="auto"
                    center.x="parent.center.x"
                    text="{name}"
                    textColor="white"
                    top="GRID / 2"
                />
            </UIView>
            <UIView
                backgroundColor="rgba(0, 0, 0, 0.5)"
                bottom="#image.bottom"
                height="auto + GRID / 2"
                width="100%">

                <UILabel
                    font="{theme.font.headline}"
                    left="GRID / 2"
                    numberOfLines="2"
                    right="parent.right - GRID"
                    text="{company.name}"
                    top="previous.bottom + GRID / 2"
                    textColor="white"
                />
                <UILabel
                    font="{theme.font.footnote}"
                    left="GRID / 2"
                    numberOfLines="2"
                    right="parent.right - GRID / 2"
                    text="{description}"
                    top="previous.bottom + GRID / 4"
                    textColor="white"
                />
            </UIView>
        </UIView>
    </UIView>
</ProjectIndexItemCell>
