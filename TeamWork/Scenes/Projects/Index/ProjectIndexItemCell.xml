<ProjectIndexItemCell height="auto" selectionStyle="none">
    <macro name="SPACING" value="16"/>

    <UIView
        height="auto"
        left="SPACING / 2"
        right="parent.right - SPACING / 2"
        top="SPACING">

        <UIView
            backgroundColor="white"
            height="auto + SPACING"
            layer.cornerRadius="8"
            layer.masksToBounds="true"
            width="100%">

            <UIImageView
                clipsToBounds="true"
                contentMode="scaleAspectFill"
                height="150"
                imageUrl="{image}"
                top="0"
                width="100%"
            />
            <UIView
                backgroundColor="rgba(0, 0, 0, 0.5)"
                bottom="previous.bottom"
                height="auto + SPACING / 2"
                width="100%">

                <UILabel
                    font="{theme.font.title3.bold}"
                    height="auto"
                    left="SPACING / 2"
                    right="parent.right - SPACING / 2"
                    text="{name}"
                    textColor="white"
                    top="SPACING / 2"
                />
            </UIView>
            <UILabel
                font="{theme.font.headline}"
                left="SPACING / 2"
                numberOfLines="2"
                right="parent.right - SPACING / 2"
                text="{company.name}"
                top="previous.bottom + SPACING / 2"
            />
            <UILabel
                font="{theme.font.footnote}"
                left="SPACING / 2"
                numberOfLines="2"
                right="parent.right - SPACING / 2"
                text="{description}"
                top="previous.bottom + SPACING / 2"
            />
        </UIView>
    </UIView>
</ProjectIndexItemCell>
