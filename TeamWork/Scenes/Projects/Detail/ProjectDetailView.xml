<UIView
    backgroundColor="clear"
    id="view">

    <macro name="GRID" value="16"/>

    <UIVisualEffectView
        effect="UIBlurEffect(light)"
        height="100%"
        outlet="visualEffectView"
        width="100%"
    />
    <UIScrollView
        alwaysBounceVertical="false"
        backgroundColor="clear"
        contentInsetAdjustmentBehavior="never"
        id="scrollView"
        outlet="scrollView"
        scrollIndicatorInsets.bottom="parent.safeAreaInsets.bottom"
        scrollIndicatorInsets.top="parent.safeAreaInsets.top"
        top="0">

        <UIView
            backgroundColor="white"
            height="#view.height"
            width="100%"
        />
        <UIView
            backgroundColor="clear"
            layer.masksToBounds="true"
            height="auto"
            id="cardView"
            outlet="cardView"
            top="0"
            width="100%">

            <TWKImageView
                contentMode="scaleAspectFill"
                height="300"
                imageUrl="{image}"
                outlet="logoImageView"
                top="0"
                width="100%"
            />
            <UIView
                height="auto + GRID / 2"
                id="labelContainer"
                top="0"
                width="100%">

                <UILabel
                    font="{theme.font.title1.bold} 36"
                    height="auto"
                    left="GRID"
                    numberOfLines="0"
                    right="parent.right - GRID * 3"
                    text="{name}"
                    textColor="{titleColor}"
                    top="parent.safeAreaInsets.top + GRID / 2"
                />
            </UIView>
        </UIView>
        <UIView
            backgroundColor="clear"
            height="auto + GRID"
            outlet="contentView"
            top="#cardView.bottom + GRID">

            <UILabel
                height="auto"
                left="GRID"
                numberOfLines="0"
                right="parent.right - GRID"
                text="{description}"
            />
        </UIView>
    </UIScrollView>
    <UIView
        backgroundColor="clear"
        center.y="#labelContainer.center.y + GRID"
        height="36"
        layer.cornerRadius="width / 2"
        layer.masksToBounds="true"
        right="parent.right - GRID"
        width="36"
        isHidden="true">

        <UIButton
            center.x="parent.center.x"
            center.y="parent.center.y"
            height="24"
            image="close"
            outlet="closeButton"
            tintColor="black"
            type="system"
            width="24"
        />
    </UIView>
</UIView>
